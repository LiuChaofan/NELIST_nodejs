<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 transitional//EN"
"http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitioal.dtd">
<html>
    <head>
        <title><%= table %> - NELIST</title>
        <link rel='stylesheet' href='/stylesheets/bootstrap.css' />
        <style type="text/css">
            body{
                padding-top: 60px;
                padding-bottom: 40px;
            }
        </style>
        <link href="/stylesheets/bootstrap-responsive.css" rel="stylesheet">
    </head>
    <body>
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="/">NELIST</a>
                    <div class="nav-collapse">
                        <ul class="nav">
                            <% if(dbName == 'mysql'){ %>
                                <li><a href="/">首页</a></li>
                                <li class="active"><a href="/mysql">MySQL</a></li>
                                <li><a href="/couchdb">CouchDB</a></li>
                                <li><a href="/blacklist">黑名单</a></li>
                            <% } %>
                            <% if(dbName == 'couchdb'){ %>
                                <li><a href="/">首页</a></li>
                                <li><a href="/mysql">MySQL</a></li>
                                <li class="active"><a href="/couchdb">CouchDB</a></li>
                                <li><a href="/blacklist">黑名单</a></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <div id="container" class="container">

                        <ul class="nav nav-pills">
                            <li><a href="/<%= dbName %>/dataset">dataset</a></li>
                            <li><a href="/<%= dbName %>/user">user</a></li>
                            <li><a href="/<%= dbName %>/weibo">weibo</a></li>
                        </ul>
            <div class="hero-unit">
                <h1><%= table %></h1>
                <hr />
                    <% if(table == 'dataset'){ %>
                        <table class="table table-hover" style="word-break:keep-all;text-overflow:'...';white-space:nowrap;table-layout:fixed;width='100'">
                            <thead>
                                <tr>
                                    <th width="20%">ID号</th>
                                    <th width="22%">发布时间</th>
                                    <th width="35%">文本</th>
                                    <th width="15%">用户昵称</th>
                                    <th width="8%">更多...</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(function(data){ %>
                                <% include datasetrow %>
                                <% }); %>

                            </tbody>
                        </table>
                        <% } else if(table == 'weibo'){ %>
                        <table class="table table-hover" style="word-break:keep-all;text-overflow:'...';white-space:nowrap;table-layout:fixed;width='100'">
                            <thead>
                                <tr>
                                    <th width="20%">微博ID</th>
                                    <th width="15%">用户ID</th>
                                    <th width="40%">内容</th>
                                    <th width="17%">昵称</th>
                                    <th width="8%">更多...</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(function(data){ %>
                                <% include weiborow %>
                                <% }); %>

                            </tbody>
                        </table>
                        <% } else{%>

                        <table class="table table-hover" style="word-break:keep-all;text-overflow:'...';white-space:nowrap;table-layout:fixed;width='100'">
                            <thead>
                                <tr>
                                    <th width="15%">用户ID</th>
                                    <th width="17%">昵称</th>
                                    <th width="40%">粉丝ID</th>
                                    <th width="20%">地区</th>
                                    <th width="8%">更多...</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach(function(data){ %>
                                <% include userrow %>
                                <% }); %>

                            </tbody>
                        </table>
                        <% } %>
                        <div class="pagination">
                            <ul>
                                <li><a href="/<%= dbName %>/<%= table %>?page=1">1</a></li>
                                <li><a href="/<%= dbName %>/<%= table %>?page=2">2</a></li>
                                <li><a href="/<%= dbName %>/<%= table %>?page=3">3</a></li>
                                <li><a href="/<%= dbName %>/<%= table %>?page=4">4</a></li>
                                <li><a href="/<%= dbName %>/<%= table %>?page=5">5</a></li>
                            </ul>
                        </div>

                    </div>
            <hr />
            <footer>
                <p>NELIST 2014</p>
            </footer>
        </div>
    </body>
    <script src="/javascripts/jquery-2.1.0.js"></script>
    <script src="/javascripts/bootstrap.js"></script>
</html>
